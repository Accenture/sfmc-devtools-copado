{
    "tabWidth": 4,
    "printWidth": 100,
    "trailingComma": "none",
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        },
        {
            "files": "package.json",
            "options": {
                "printWidth": 40
            }
        },
        {
            "files": "package-lock.json",
            "options": {
                "printWidth": 40
            }
        },
        {
            "files": "*.json",
            "options": {
                "parser": "json"
            }
        },
        {
            "files": "*.md",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
